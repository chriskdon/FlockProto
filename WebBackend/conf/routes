# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Start
GET        /                                        controllers.Application.index

# API
POST        /api/users/register                     controllers.api.Users.register
GET         /api/users/authenticate                 controllers.api.Users.authenticate

GET         /api/connections/list                   controllers.api.Connections.list
POST        /api/connections/add                    controllers.api.Connections.add


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                            controllers.Assets.at(path="/public", file)
